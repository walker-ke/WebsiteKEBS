	<version>1.0.1</version>
	<description>PLG_OUTPUT_DESK_LIVE_CHAT_DESCRIPTION</description>
	<files>
		<filename plugin="output_desk_live_chat">output_desk_live_chat.php</filename>
        <folder>helper</folder>
	</files>
    <languages folder="language">
        <language tag="en-GB">en-GB.plg_system_output_desk_live_chat.ini</language>
        <language tag="en-GB">en-GB.plg_system_output_desk_live_chat.sys.ini</language>
    </languages>
	<config addfieldpath="/plugins/system/output_desk_live_chat/helper">
	<fields name="params">
		<fieldset name="main" label="Output Desk settings">
			<field name="outputdeskaccount" type="outputdeskaccount" label=" " description="" default="" />
			<field name="message" type="hidden" label="" description="" default="" />
			<field name="name" type="hidden" label="" description="" default="" />
			<field name="plan" type="hidden" label="" description="" default="" />
			<field name="code" type="hidden" label="" description="" default="" />
		</fieldset>
	</fields>
	</config>
</extension>
